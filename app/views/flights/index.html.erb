<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>From Airport</th>
      <th>To Airport</th>
      <th>Flight Number</th>
      <th>Plan Name</th>
      <th>Plane Number</th>
      <th>Total Seates</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
    <tr>
      <td>
        <%= flight.fromairport %>
      </td>
      <td>
        <%= flight.toairport %>
      </td>
      <td>
        <%= flight.flightno %>
      </td>
      <td>
        <%= flight.planename %>
      </td>
      <td>
        <%= flight.planno %>
      </td>
      <td>
        <%= flight.totalseats %>
      </td>
      <td>
        <%= flight.departure %>
      </td>
      <td>
        <%= flight.arrival %>
      </td>
      <td><%= link_to 'Show', flight %></td>
      <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
      <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>